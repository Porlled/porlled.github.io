@import 'normalize.styl'
@import 'fonts.styl'
@import '_animateCSS.styl'
@import 'mixins.styl'
@import '_header.styl'
@import '_main_page.styl'
@import '_footer.styl'

html
    font-size 16px
*
    box-sizing border-box

a
    color mainGeneralTextColor
    text-decoration none
body
    overflow-x hidden
    background mainBGcolor
    color mainGeneralTextColor
    font-family 'Ubuntu', sans-serif
    
.container
    padding 0 7%
  
ul
    list-style none
    margin 0
    padding 0
//блок с кнопками scroll хедер
.actionScroll_block
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    flex-flow column nowrap
    text-align center
// кнопка призыв классик
.actionButtonClassic
    width 30%
    margin 1rem auto
    border 2px solid mainColor1
    padding 1rem 2rem
    font-weight 100
    font-size 1.5rem
    &:hover
        background mainColor1
//кнопка действие СТРЕЛКА
.actionButtonArrow
    margin 0 auto
    width 5%
    font-size 3rem
//кнопка для покупки
.actionBuyBlock
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    flex-flow row wrap
    position relative
    margin 2rem 0
.actionBuyButton
    margin 0 auto
    padding 1rem 2rem 1rem 2rem
    border 2px solid mainColor1
    font-size 1.4rem
    text-transform uppercase
    &:hover
        background mainColor1
    i
        margin-right 0.5rem